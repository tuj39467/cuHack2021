<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BayQuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/sub_header"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:text="Who is The Buccaneers Quaterback?"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/question_1"
                android:layout_width="379dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="#23737070"
                android:backgroundTint="#7C7777"
                android:capitalize="words"
                android:hint="Type Here"
                android:lines="1"
                android:maxHeight="35dp"
                android:maxLines="1"
                android:textAllCaps="true" />
            android:layout_marginLeft="16dp"
            android:autofillHints="" />

            <ImageView
                android:id="@+id/funnyGuy"
                android:layout_width="wrap_content"
                android:layout_height="472dp"
                app:srcCompat="@drawable/esllizardsquad" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="378dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:background="#000000"
                android:text="What did McKay say was his biggest reason for taking the job coaching the Buccaneers?"
                android:textAlignment="center"
                android:textColor="#FFFAFA"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question_2_Option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="The cigars"
                android:textColor="#000000" />
            <CheckBox
                android:id="@+id/question_2_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="The girls"
                android:textColor="#000000" />


            <CheckBox
                android:id="@+id/question_2_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="The guys"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:background="#000000"
                android:text="How was Buccaneers chosen as the team name?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_group_question_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_3_option_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="0dp"
                    android:buttonTint="#F30000"
                    android:text="By the Mayor of the city "
                    android:textColor="#000000" />
                <RadioButton
                    android:id="@+id/question_3_option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:buttonTint="#F44336"
                    android:text="In a name-contest"
                    android:textColor="#020202" />
                <RadioButton
                    android:id="@+id/question_3_Option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:buttonTint="#F44336"
                    android:text="By the owner of the team" />
                <RadioButton
                    android:id="@+id/question_3_option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    android:buttonTint="#F44336"
                    android:text="By the pirates " />
            </RadioGroup>


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:maxHeight="20dp"
                app:srcCompat="@drawable/therealguy_6_0" />

            <TextView
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:background="#000000"
                android:text="What is the name of The Buccaneers quaterback ?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question_4_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="Mahomes" />

            <CheckBox
                android:id="@+id/question_4_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="Tom Braidi" />


            <CheckBox
                android:id="@+id/question_4_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#F44336"
                android:text="Ronaldo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mickydees" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                app:srcCompat="@drawable/ppl" />

            <TextView
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:background="#000000"
                android:text="Hall of Fame : Who was the first Tampa Bay Buccaneer in the Pro Football Hall of Fame"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="16sp" />


            <RadioGroup
                android:id="@+id/radio_group_question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_5_option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="0dp"
                    android:buttonTint="#F44336"
                    android:text="Lee Roy Selmon " />
                <RadioButton
                    android:id="@+id/question_5_option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:buttonTint="#F44336"
                    android:text="Jamaal Charles"
                    android:textColor="#050505" />
                <RadioButton
                    android:id="@+id/question_5_option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="22dp"
                    android:buttonTint="#F44336"
                    android:text="Len Dawson" />
            </RadioGroup>

            <Button
                android:id="@+id/evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:onClick="startEvaluation"
                android:text="@string/evaluate_button"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:onClick="reset"
                android:text="@string/reset_button"
                android:textColor="#ff0033"
                android:textStyle="bold"
                tools:ignore="OnClick" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>